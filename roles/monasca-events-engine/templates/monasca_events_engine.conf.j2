[logging]
log_level = {{ log_level }}
log_file = "{{ monasca_events_log_dir }}/events_engine.log"

[mysql]
database_name = {{ mysql_db }}
hostname = {{ mysql_node }}
username = {{ mysql_user }}
password = "{{ mysql_pass }}"

[kafka]
url: {{ kafka_node }}
event_group: {{ event_group }}
stream_def_group: {{ stream_def_group }}
stream_def_pipe_group: {{ stream_def_pipe_group }}
events_topic: {{ events_topic }}
transformed_events_topic: {{ transformed_events_topic }}
stream_def_topic: {{ stream_def_topic }}
notifications_topic: {{ notifications_topic }}
events_fetch_size_bytes: {{ events_fetch_size_bytes }}
events_buffer_size: {{ events_buffer_size }}
# 8 times buffer size
events_max_buffer_size: {{ events_max_buffer_size }}

[winchester]
winchester_config: {{ winchester_config }}

[event_processor]
number: {{ event_processor_num }}

[pipeline_processor]
number: {{ pipeline_processor_num }}

[zookeeper]
url: {{ zoo_node }}
